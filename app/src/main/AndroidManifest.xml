<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hbh.cl.carfriends">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/carplay"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".talkcar.view.ImageViewdetailActivity"
            android:theme="@style/Theme.Design.NoActionBar"/>

        <activity android:name=".lookcar.view.VideoInfoActivity"
            android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"/>

        <activity android:name=".lookcar.view.BottomInfoActivity"
            android:theme="@style/Theme.Design.NoActionBar"/>

        <activity android:name=".buycar.view.CarDetailActivity"
            android:theme="@style/Theme.Design.NoActionBar"/>

        <activity android:name=".aboutme.view.AboutActivity"
            android:theme="@style/Theme.Design.NoActionBar"/>

        <activity android:name=".aboutme.view.LotteryDrawActivity"
            android:theme="@style/Theme.Design.NoActionBar"/>

        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>