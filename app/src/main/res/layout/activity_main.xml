<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hbh.cl.carfriends.MainActivity">

    <FrameLayout
        android:id="@+id/center_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgray"
        android:layout_marginBottom="@dimen/radio_group_height">
    </FrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingTop="@dimen/toolbar_padding_top"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/CityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:text="@string/cityName"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/city_location_dian"
                android:drawablePadding="@dimen/divider_height_5"
                />
            <ImageView
                android:id="@+id/select_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/selecter_icon" />
            <TextView
                android:id="@+id/top_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_search"
                android:hint="搜索"
                android:textColorHint="@color/white"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:drawableLeft="@drawable/ic_search"
                android:layout_toLeftOf="@id/select_icon"
                android:layout_toRightOf="@id/CityName"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/radio_group_height"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/talk_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/talkcar"
            android:drawableTop="@drawable/ic_talk_car"
            style="@style/bottom_iconbtn"/>

        <RadioButton
            android:id="@+id/look_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/lookcar"
            android:drawableTop="@drawable/ic_look_car"
            style="@style/bottom_iconbtn"/>

        <RadioButton
            android:id="@+id/homePage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/shouye"
            android:drawableTop="@drawable/ic_home_page"
            style="@style/bottom_iconbtn"/>

        <RadioButton
            android:id="@+id/buy_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/buycar"
            android:drawableTop="@drawable/ic_buy_car"
            style="@style/bottom_iconbtn"/>

        <RadioButton
            android:id="@+id/aboutme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/aboutme"
            android:drawableTop="@drawable/ic_aboutme"
            style="@style/bottom_iconbtn"/>

    </RadioGroup>

</merge>
